@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewData["Title"] - Room Expense Tracker</title>

    <link rel="icon" href="~/favicon.png" />

    <!-- Tailwind + Flowbite -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/flowbite@1.5.4/dist/flowbite.min.css" rel="stylesheet" />

    <!-- Toastr CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />

    <!-- Custom toast loader CSS -->
    <link href="~/css/toast.css" rel="stylesheet" />
</head>

<body class="flex flex-col min-h-screen overflow-x-hidden bg-gradient-to-br from-[#000000] to-[#000000] text-white">

    <!-- Global Loader -->
    <div id="globalLoader" class="fixed inset-0 bg-gray-800 bg-opacity-50 flex items-center justify-center z-50 hidden">
        <div class="animate-spin rounded-full h-16 w-16 border-t-4 border-indigo-600"></div>
    </div>

    <!-- Mobile Sidebar -->
    <div id="mobileSidebar" class="fixed inset-y-0 left-0 w-64 bg-white/10 backdrop-blur-lg border-r border-white/20 shadow-lg z-40 transform -translate-x-full transition-transform duration-300 md:hidden rounded-r-xl flex flex-col justify-between">
        <div>
            <div class="p-4 border-b border-white/20 flex justify-between items-center">
                <h2 class="text-xl font-bold text-indigo-200">🏠 RoomExpense</h2>
                <button onclick="toggleSidebar()" class="text-gray-300 hover:text-red-400 text-xl">✖</button>
            </div>
            <ul class="p-4 space-y-2 text-white-100">
                <li><a asp-controller="Rooms" asp-action="Index" class="block px-4 py-2 rounded hover:bg-indigo-200/10 font-medium">🏡 Home</a></li>
                <li><a asp-controller="Home" asp-action="Privacy" class="block px-4 py-2 rounded hover:bg-indigo-200/10">🔒 Privacy</a></li>
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <li>
                        <form asp-controller="Account" asp-action="Logout" method="post" data-ajax="true" data-redirect="@Url.Action("Login", "Account")">
                            <button class="w-full text-left px-4 py-2 rounded hover:bg-red-200/10 text-red-400 font-medium">🚪 Logout</button>
                        </form>
                    </li>
                }
            </ul>
        </div>
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <div class="p-4 border-t border-white/20 text-sm text-indigo-100">
                <a class="flex items-center gap-2 text-white-700 font-medium">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-indigo-400">
                        <path fill-rule="evenodd" d="M12 2a10 10 0 100 20 10 10 0 000-20zm0 5.25a2.75 2.75 0 110 5.5 2.75 2.75 0 010-5.5zM6.75 17.75a5.25 5.25 0 0110.5 0v.5h-10.5v-.5z" clip-rule="evenodd" />
                    </svg>
                    <span class="text-white">@User.Identity?.Name</span>
                </a>
            </div>
        }
    </div>

    <!-- Navbar -->
    <nav class="fixed top-0 left-0 right-0 bg-white/10 backdrop-blur-lg shadow-md border-b border-white/20 px-6 py-4 flex justify-between items-center z-50">
        <div class="flex items-center gap-4">
            <button id="sidebarToggle" onclick="toggleSidebar()" class="md:hidden text-2xl hover:text-white-600">☰</button>
            <span class="text-xl font-bold text-white-600">Room Expense Tracker</span>
        </div>
        <div class="hidden md:flex items-center gap-6">
            <a asp-controller="Rooms" asp-action="Index" class="text-white-700 hover:text-green-600 font-medium">🏡 Home</a>
            <a asp-controller="Home" asp-action="Privacy" class="text-white-700 hover:text-green-600 font-medium">🔒 Privacy</a>

            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <a class="flex items-center gap-2 text-white-700 font-medium">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-indigo-400">
                        <path fill-rule="evenodd" d="M12 2a10 10 0 100 20 10 10 0 000-20zm0 5.25a2.75 2.75 0 110 5.5 2.75 2.75 0 010-5.5zM6.75 17.75a5.25 5.25 0 0110.5 0v.5h-10.5v-.5z" clip-rule="evenodd" />
                    </svg>
                    <span class="text-white">@User.Identity?.Name</span>
                </a>
                <form asp-controller="Account" asp-action="Logout" method="post" data-ajax="true" data-redirect="@Url.Action("Login", "Account")">
                    <button class="text-sm bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded">Logout</button>
                </form>
            }
        </div>
    </nav>

    <!-- Page Content -->
    <div class="container mx-auto px-1 flex-1" style="padding-top:5rem">
        <main role="main" class="flex-1 overflow-y-auto px-2">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="h-[6vh] bg-black/30 backdrop-blur-md shadow-inner flex items-center justify-center text-sm">
        © 2025 - AppExpenseTracker -
        <a asp-controller="Home" asp-action="Privacy" class="text-indigo-500 hover:underline">Privacy</a>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flowbite@2.3.0/dist/flowbite.min.js"></script>

    <!-- Generic AJAX + Toastr -->
    <script>
        // Toastr default settings
        toastr.options = {
            closeButton: true,
            progressBar: true,
            positionClass: "toast-bottom-right", // bottom right
            timeOut: 4000,
            extendedTimeOut: 1000,
            newestOnTop: true,
            showMethod: "fadeIn",
            hideMethod: "fadeOut"
        };

        function showToast(message, type = 'info') {
            if (!message) return;
            switch (type) {
                case 'success': toastr.success(message); break;
                case 'error': toastr.error(message); break;
                case 'warning': toastr.warning(message); break;
                default: toastr.info(message); break;
            }
        }

        // Loader functions
        function showLoader() { document.getElementById("globalLoader")?.classList.remove("hidden"); }
        function hideLoader() { document.getElementById("globalLoader")?.classList.add("hidden"); }

        // Toggle sidebar
        function toggleSidebar() {
            const sidebar = document.getElementById('mobileSidebar');
            sidebar.classList.toggle('-translate-x-full');
            document.body.classList.toggle('overflow-hidden');
        }

        // Generic AJAX form handler
        $(document).on("submit", "form[data-ajax='true']", function (e) {
            e.preventDefault();
            const $form = $(this);
            const url = $form.attr("action");
            const method = $form.attr("method") || "POST";
            showLoader();

            $.ajax({
                url: url,
                method: method,
                data: $form.serialize(),
                success: function (response) {
                    hideLoader();
                    if (response.success) {
                        $('#editExpenseModal').addClass('hidden');
                        showToast(response.message, 'success');
                        const redirectUrl = $form.data("redirect");
                        if (redirectUrl) setTimeout(() => window.location.href = redirectUrl, 1000);
                    } else {
                        showToast(response.message, 'error');
                    }
                },
                error: function (xhr) {
                    hideLoader();
                    try {
                        const res = JSON.parse(xhr.responseText);
                        showToast(res.message || "An unexpected error occurred.", 'error');
                    } catch {
                        showToast("An unexpected error occurred.", 'error');
                    }
                }
            });
        });

        // Global AJAX error handler
        $(document).ajaxError(function (event, xhr) {
            try {
                const res = JSON.parse(xhr.responseText);
                showToast(res.message || "An unexpected error occurred.", 'error');
            } catch {
                showToast("An unexpected error occurred.", 'error');
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
