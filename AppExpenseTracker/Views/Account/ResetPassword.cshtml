@using Services.ViewModels
@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="min-h-[70vh] flex items-center justify-center">
    <div class="bg-white/10 backdrop-blur-lg p-8 rounded-xl border border-white/20 shadow-lg text-light-700 w-full max-w-md">
        <h2 class="text-2xl font-bold text-center text-white-400 mb-6">🔐 Reset Password</h2>

        <form asp-action="ResetPassword" method="post" class="space-y-5">
            <div asp-validation-summary="ModelOnly" class="text-red-400 text-sm mb-3"></div>

            <input type="hidden" asp-for="Token" />
            <input type="hidden" asp-for="Email" />

            <div>
                <label asp-for="Password" class="block mb-1 text-gray-200">New Password</label>
                <input asp-for="Password" type="password"
                       class="w-full px-4 py-2 border border-gray-600 bg-gray-800 text-white rounded focus:outline-none focus:ring-2 focus:ring-teal-400"
                       placeholder="Enter new password" />
                <span asp-validation-for="Password" class="text-red-400 text-sm"></span>
            </div>

            <div>
                <label asp-for="ConfirmPassword" class="block mb-1 text-gray-200">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password"
                       class="w-full px-4 py-2 border border-gray-600 bg-gray-800 text-white rounded focus:outline-none focus:ring-2 focus:ring-teal-400"
                       placeholder="Confirm new password" />
                <span asp-validation-for="ConfirmPassword" class="text-red-400 text-sm"></span>
            </div>

            <button type="submit"
                    class="w-full bg-indigo-500 hover:bg-indigo-600 text-white font-semibold py-2 rounded shadow transition">
                Reset Password
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
