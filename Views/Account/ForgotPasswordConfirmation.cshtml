@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="min-h-[70vh] flex items-center justify-center">
    <div class="bg-[#1e1f25]/90 backdrop-blur-lg p-6 rounded-xl border border-gray-700 shadow-lg max-w-md text-center">
        <h2 class="text-xl font-bold text-green-400 mb-4">📧 Reset Link Sent</h2>
        <p class="text-gray-300 mb-6">
            A reset link has been sent to your email. Follow the instructions to set a new password.
        </p>
        <a asp-action="Login"
           class="bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-2 rounded-lg shadow transition">
            Back to Login
        </a>
    </div>
</div>
