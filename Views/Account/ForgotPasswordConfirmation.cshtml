@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="min-h-[70vh] flex items-center justify-center">
    <div class="bg-green-50 border border-green-300 p-6 rounded-lg shadow-md max-w-md text-center">
        <h2 class="text-xl font-bold text-green-700 mb-4">📧 Reset Link Sent</h2>
        <p class="text-gray-700 mb-4">
            If an account exists with that email, you will receive a password reset link shortly.
        </p>
        <a asp-action="Login"
           class="bg-teal-600 hover:bg-teal-700 text-white px-4 py-2 rounded shadow transition">
            Back to Login
        </a>
    </div>
</div>
