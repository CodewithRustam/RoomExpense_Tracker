@model RoomExpenseTracker.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="min-h-[80vh] flex items-center justify-center">
    <div class="bg-white p-8 rounded-2xl shadow-lg w-full max-w-md">
        <h2 class="text-3xl font-bold text-center text-indigo-600 mb-6">🔐 Login</h2>

        <form asp-action="Login" method="post" class="space-y-5">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-3"></div>

            <div>
                <label asp-for="UserName" class="block mb-1 text-gray-700">Username</label>
                <input asp-for="UserName" class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-indigo-500" />
                <span asp-validation-for="UserName" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Password" class="block mb-1 text-gray-700">Password</label>
                <input asp-for="Password" type="password" class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-indigo-500" />
                <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex items-center">
                <input asp-for="RememberMe" class="mr-2 rounded" />
                <label asp-for="RememberMe" class="text-sm text-gray-700">Remember Me</label>
            </div>

            <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 rounded shadow transition">
                Login
            </button>

            <div class="text-center text-sm mt-4">
                Don’t have an account?
                <a asp-action="Register" class="text-indigo-600 hover:underline">Register here</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
