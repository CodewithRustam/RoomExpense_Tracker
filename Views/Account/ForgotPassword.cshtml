@using Services.ViewModels
@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}


<div class="min-h-[70vh] flex items-center justify-center">
    <div class="bg-white/10 backdrop-blur-lg p-8 rounded-xl border border-white/20 shadow-lg text-light-700 w-full max-w-md">
        <h2 class="text-2xl font-bold text-center text-white-600 mb-6">🔑 Forgot Password</h2>

        <form asp-action="ForgotPassword" method="post" class="space-y-5">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-3"></div>

            <div>
                <label asp-for="Email" class="block mb-1 text-white-700">Email</label>
                <input asp-for="Email" type="email" style="background:#26272d"
                       class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-teal-500"
                       placeholder="Enter your email" id="Email" />
                <span id="email-check-msg" class="text-sm"></span>
            </div>


            <button type="submit" id="btnSubmit"
                    class="w-full bg-gray-400 cursor-not-allowed text-white font-semibold py-2 rounded shadow transition"
                    disabled>
                Send Reset Link
            </button>

            <div class="text-center text-sm mt-4">
                <a asp-action="Login" class="text-teal-600 hover:underline">Back to Login</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>

        var regex = @Html.Raw("/^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$/")
        function isValidEmail(email) {
             return regex.test(email);
        }

        $(document).ready(function () {
            $("#Email").on("keyup", function () {
                var email = $(this).val();

                if (isValidEmail(email)) {
                    $.ajax({
                        url: '@Url.Action("CheckEmail", "Account")',
                        type: "POST",
                        data: { email: email },
                        success: function (response) {
                            if (response.exists) {
                                $("#email-check-msg").text("✅ Email found").css("color", "green");
                                $("#btnSubmit").prop("disabled", false).removeClass("bg-gray-400 cursor-not-allowed")
                                                                       .addClass("bg-teal-600 hover:bg-teal-700");
                            } else {
                                $("#email-check-msg").text("❌ Email not registered").css("color", "red");
                                $("#btnSubmit").prop("disabled", true).removeClass("bg-teal-600 hover:bg-teal-700")
                                                                      .addClass("bg-gray-400 cursor-not-allowed");
                            }
                        },
                        error: function () {
                            $("#email-check-msg").text("⚠️ Error checking email").css("color", "orange");
                            $("#btnSubmit").prop("disabled", true).removeClass("bg-teal-600 hover:bg-teal-700")
                                                                  .addClass("bg-gray-400 cursor-not-allowed");
                        }
                    });
                } else {
                    if (email.length > 0) {
                        $("#email-check-msg").text("⚠️ Enter a valid email format").css("color", "orange");
                    } else {
                        $("#email-check-msg").text("");
                    }
                    $("#btnSubmit").prop("disabled", true).removeClass("bg-teal-600 hover:bg-teal-700")
                   .addClass("bg-gray-400 cursor-not-allowed");
                }
            });
        });
    </script>
}


