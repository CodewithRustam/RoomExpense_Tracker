@using Services.ViewModels
@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="min-h-[70vh] flex items-center justify-center">
    <div class="bg-white/10 backdrop-blur-lg p-8 rounded-xl border border-white/20 shadow-lg text-light-700 w-full max-w-md">
        <h2 class="text-2xl font-bold text-center text-teal-600 mb-6">🔑 Forgot Password</h2>

        <form asp-action="ForgotPassword" method="post" class="space-y-5">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-3"></div>

            <div>
                <label asp-for="Email" class="block mb-1 text-white-700">Email</label>
                <input asp-for="Email" type="email" style="background:#26272d"
                       class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-teal-500"
                       placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>

            <button type="submit"
                    class="w-full bg-teal-600 hover:bg-teal-700 text-white font-semibold py-2 rounded shadow transition">
                Send Reset Link
            </button>

            <div class="text-center text-sm mt-4">
                <a asp-action="Login" class="text-teal-600 hover:underline">Back to Login</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
