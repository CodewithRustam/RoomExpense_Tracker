@model RoomExpenseTracker.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="min-h-[80vh] flex items-center justify-center">
    <div class="bg-white/10 backdrop-blur-lg p-8 rounded-xl border border-white/20 shadow-lg text-light-700 w-full max-w-md">
        <h2 class="text-3xl font-bold text-center text-teal-600 mb-6">📝 Create Account</h2>

        <form asp-action="Register" method="post" class="space-y-5">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-3"></div>

            <div>
                <label asp-for="UserName" class="block mb-1 text-white-700">Username</label>
                <input asp-for="UserName" style="background:#26272d" class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-teal-500" placeholder="Choose a username" />
                <span asp-validation-for="UserName" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Password" class="block mb-1 text-white-700">Password</label>
                <input asp-for="Password" style="background:#26272d" type="password" class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-teal-500" placeholder="Password" />
                <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="ConfirmPassword" class="block mb-1 text-white-700">Confirm Password</label>
                <input asp-for="ConfirmPassword" style="background:#26272d" type="password" class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-teal-500" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
            </div>

            <button type="submit"
                    class="w-full bg-teal-600 hover:bg-teal-700 text-white font-semibold py-2 rounded shadow transition">
                Register
            </button>

            <div class="text-center text-sm mt-4">
                Already have an account?
                <a asp-action="Login" class="text-teal-600 hover:underline">Login here</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
