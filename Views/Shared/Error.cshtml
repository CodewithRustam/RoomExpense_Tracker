@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="flex flex-col justify-center bg-dark-100 text-center p-6">
    <h1 class="text-3xl font-bold text-red-600">Something went wrong</h1>
    <p class="mt-4 text-white-700">An unexpected error occurred. Please try again later.</p>

    @if (Model.ShowRequestId)
    {
        <p class="mt-2 text-sm text-white-500">
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }

   <div>
        <a href="/" class="mt-6 inline-block bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">
            Go back home
        </a>
    </div>
</div>
