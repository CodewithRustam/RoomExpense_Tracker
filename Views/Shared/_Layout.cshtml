@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" class="overflow-x-hidden">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <title>@ViewData["Title"] - Room Expense Tracker</title>

    <link rel="icon" href="~/favicon.png" />
    <link href="~/css/toast.css" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/flowbite@1.6.5/dist/flowbite.min.js"></script>
</head>
<body class="flex flex-col min-h-screen overflow-x-hidden bg-gradient-to-br from-[#000000] to-[#000000] text-white">
    <div id="globalLoader" class="fixed inset-0 bg-gray-800 bg-opacity-50 flex items-center justify-center z-50 hidden">
        <div class="animate-spin rounded-full h-16 w-16 border-t-4 border-indigo-600"></div>
    </div>

    <div id="mobileSidebar"
         class="fixed inset-y-0 left-0 w-64 bg-white/10 backdrop-blur-lg border-r border-white/20 shadow-lg z-40 transform -translate-x-full transition-transform duration-300 md:hidden rounded-r-xl">
        <div class="p-4 border-b border-white/20 flex justify-between items-center">
            <h2 class="text-xl font-bold text-indigo-200">🏠 RoomExpense</h2>
            <button onclick="toggleSidebar()" class="text-gray-300 hover:text-red-400 text-xl">✖</button>
        </div>
        <ul class="p-4 space-y-2 text-white-100">
            <li>
                <a asp-controller="Rooms" asp-action="Index"
                   class="block px-4 py-2 rounded hover:bg-indigo-200/10 font-medium">🏡 Home</a>
            </li>
            <li>
                <a asp-controller="Home" asp-action="Privacy"
                   class="block px-4 py-2 rounded hover:bg-indigo-200/10">🔒 Privacy</a>
            </li>
            <li>
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button class="w-full text-left px-4 py-2 rounded hover:bg-red-200/10 text-red-400 font-medium">
                            🚪 Logout
                        </button>
                    </form>
                }
            </li>
        </ul>
    </div>

<nav class="fixed top-0 left-0 right-0 bg-white/10 backdrop-blur-lg shadow-md border-b border-white/20 px-6 py-4 flex justify-between items-center z-50">
        <div class="flex items-center gap-4">
            <button id="sidebarToggle" onclick="toggleSidebar()" class="md:hidden text-2xl hover:text-white-600">
                ☰
            </button>
            <span class="text-xl font-bold text-white-600">Room Expense Tracker</span>
        </div>

        <div class="hidden md:flex items-center gap-6">
            <a asp-controller="Rooms" asp-action="Index" class="text-white-700 hover:text-green-600 font-medium">🏡 Home</a>
            <a asp-controller="Home" asp-action="Privacy" class="text-white-700 hover:text-green-600 font-medium">🔒 Privacy</a>

            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button class="text-sm bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded">Logout</button>
                </form>
            }
        </div>
    </nav>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <!-- Page Content -->
    <div class="container mx-auto px-3 flex-1" style="padding-top:5rem">
        <main role="main" class="flex-1 overflow-y-auto px-2">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="h-[6vh] bg-black/30 backdrop-blur-md shadow-inner flex items-center justify-center text-sm">
        © 2025 - RoomExpenseTracker -
        <a asp-controller="Home" asp-action="Privacy" class="text-indigo-500 hover:underline">Privacy</a>
    </footer>
    <script src="~/js/toast.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const successMsg = '@Html.Raw(TempData["SuccessMessage"])';
            if (successMsg) {
                showToast(successMsg, 'success');
            }

            const errorMessage = '@TempData["ErrorMessage"]';
            if (errorMessage) {
               showToast(errorMessage, 'error');
            }

            const infoMessage = '@TempData["InfoMessage"]';
            if (infoMessage) {
               showToast(infoMessage, 'info');
            }

            const warningMessage = '@TempData["WarningMessage"]';
            if (warningMessage) {
               showToast(warningMessage, 'warning');
            }

            // Prevent clicks inside the sidebar from closing it
            $('#mobileSidebar').on('click', function(e) {
                e.stopPropagation();
            });

            // Prevent clicks on the toggle button from triggering the document click handler
            $('#sidebarToggle').on('click', function(e) {
                e.stopPropagation();
            });

            // Close sidebar when clicking outside
            $(document).on('click', function(e) {
                const sidebar = $('#mobileSidebar');
                if (!sidebar.hasClass('-translate-x-full') && !$(e.target).closest('#mobileSidebar').length) {
                    sidebar.addClass('-translate-x-full');
                }
            });
        });

        function toggleSidebar() {
            $('#mobileSidebar').toggleClass('-translate-x-full');
        }

        function showLoader() {
            const loader = document.getElementById("globalLoader");
            if (loader) {
                loader.classList.remove("hidden");
                console.log("Loader shown");
            } else {
                console.error("Loader element not found!");
            }
        }

        function hideLoader() {
            const loader = document.getElementById("globalLoader");
            if (loader) {
                loader.classList.add("hidden");
            } else {
                console.error("Loader element not found!");
            }
        }

        document.addEventListener("submit", function(e) {
            const forms = e.target.closest("form");
            if (forms) {
                showLoader();
                setTimeout(() => {
                    hideLoader();
                }, 1500);
            }
        });

        window.addEventListener("load", function() {
            showLoader();
            setTimeout(hideLoader, 700);
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)

    <div id="toast-container" class="toast-container">
        <!-- Toasts will be inserted here -->
    </div>
</body>
</html>