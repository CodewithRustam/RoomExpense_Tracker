@model IEnumerable<RoomExpenseTracker.Models.Room>

@{
    ViewData["Title"] = "Shared Rooms";
}

<!-- Page Container -->
<div class="container mx-auto px-4 py-8">
    <!-- Page Heading -->
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-4xl font-bold text-gray-800">🏠 Shared Rooms</h1>
        <a asp-action="Create" class="bg-blue-600 text-white px-5 py-2 rounded-lg hover:bg-blue-700 transition-all shadow-md">
            + Create New Room
        </a>
    </div>

    <!-- Check if there are rooms -->
    @if (!Model.Any())
    {
        <div class="text-center py-20 text-gray-500">
            <p class="text-xl">You don’t have any rooms yet.</p>
            <p class="mt-2">Start by creating your first shared room!</p>
        </div>
    }
    else
    {
        <!-- Grid of Room Cards -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var room in Model)
            {
                <div class="bg-white rounded-xl shadow hover:shadow-lg transition-all p-6 flex flex-col justify-between">
                    <div>
                        <h2 class="text-2xl font-semibold text-gray-800 mb-2 flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10l1-2m0 0l1-2m10 4v10m-6 0H5a2 2 0 01-2-2V10m0 0l9-7 9 7m-9 7h.01" />
                            </svg>
                            @room.Name
                        </h2>
                        <p class="text-gray-600 mb-4">👥 Members: <strong>@(room.Members?.Count ?? 0)</strong></p>
                    </div>
                    <a asp-action="Details" asp-route-id="@room.RoomId"
                       class="mt-auto text-blue-600 font-medium hover:underline hover:text-blue-800 transition-all">
                        ➤ View Details
                    </a>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <!-- Load Tailwind CSS via CDN (for dev) -->
    <script src="https://cdn.tailwindcss.com"></script>
}
