@model IEnumerable<RoomExpenseTracker.Models.Room>

@{
    ViewData["Title"] = "Shared Rooms";
}

<div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center mb-10">
        <h1 class="text-2xl font-medium text-white flex items-center gap-1">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10l1-2m0 0l1-2m10 4v10m-6 0H5a2 2 0 01-2-2V10m0 0l9-7 9 7m-9 7h.01" />
            </svg>
            Shared Rooms
        </h1>
        <a asp-action="Create" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-purple-600 rounded-full hover:bg-purple-700 transition focus:outline-none focus:ring-2 focus:ring-purple-400" style="white-space:nowrap">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            New Room
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-16 text-gray-400">
            <p class="text-base font-medium">No rooms to show.</p>
            <p class="mt-2 mb-6 text-sm">Create a shared room to get started!</p>
            <a asp-action="Create" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-purple-600 rounded-full hover:bg-purple-700 transition">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                Create Room
            </a>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var room in Model)
            {
                <div class="bg-white/10 backdrop-blur-lg border border-white/20 rounded-xl p-5 text-white shadow-lg hover:bg-white/15 transition">
                    <div>
                        <div class="flex items-center mb-3">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-purple-400 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10l1-2m0 0l1-2m10 4v10m-6 0H5a2 2 0 01-2-2V10m0 0l9-7 9 7m-9 7h.01" />
                            </svg>
                            <h2 class="text-lg font-semibold truncate">@room.Name</h2>
                        </div>
                        <p class="text-sm text-gray-300 flex items-center gap-1">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                            </svg>
                            @(room.Members?.Count ?? 0) Members
                        </p>
                        <p class="text-xs text-gray-400 mt-1">Created: @room.CreatedDate.ToString("MMM dd, yyyy")</p>
                    </div>
                    <a asp-action="Details" asp-route-id="@room.RoomId"
                       class="mt-4 inline-flex items-center text-sm font-medium text-purple-400 hover:text-purple-300 hover:underline transition">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                        View Details
                    </a>
                </div>
            }
        </div>
    }
</div>
