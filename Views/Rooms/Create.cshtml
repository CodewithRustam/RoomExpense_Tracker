@using Services.ViewModels
@model RoomViewModel

@{
    ViewData["Title"] = "Create Room";
}

<div class="container mt-5 mx-auto max-w-lg px-6 py-10 bg-white/10 backdrop-blur-lg border border-white/20 rounded-xl p-5 text-white-800 shadow-lg hover:bg-white/15 transitionshadow-md rounded-lg">
    <h1 class="text-xl font-bold text-center mb-6" style="white-space:nowrap">🛏️ Create New Room</h1>

    <form asp-action="Create" method="post" class="space-y-6">
        <!-- Room Name -->
        <div>
            <label asp-for="Name" class="block text-sm font-medium mb-1">Room Name</label>
            <input asp-for="Name" class="w-full border border-gray-300 bg bg-black rounded-lg focus:ring-2 focus:ring-white-500 focus:border-blue-500" placeholder="e.g., Apartment 101" />
            <span asp-validation-for="Name" class="text-red-500 text-sm mt-1 block"></span>
        </div>

        <!-- Member Inputs -->
        <div>
            <label class="block text-sm font-medium mb-1">Members</label>
            <div id="memberInputs" class="space-y-2">
                <input type="text" name="MemberUserNames[0]" class="member-input w-full border border-gray-300 bg bg-black rounded-lg focus:ring-2 focus:ring-white-500 focus:border-blue-500" placeholder="e.g., John" />
            </div>
            <button type="button" id="addMemberBtn" class="mt-2 text-sm text-green-700 hover:underline">+ Add Another Member</button>
        </div>

        <!-- Submit -->
        <div class="flex items-center justify-between mt-6">
            <a asp-action="Index" class="text-white-500 hover:text-gray-700">Cancel</a>
            <button type="submit" class="bg-blue-800 text-white px-6 py-2 rounded-lg hover:bg-blue-600 shadow transition-all">
                ✅ Create Room
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            let memberIndex = 1;

            $('#addMemberBtn').click(function () {
                const inputHtml = `
                    <input type="text" name="MemberUserNames[${memberIndex}]"
                        class="member-input w-full border border-gray-300 bg bg-black rounded-lg focus:ring-2 focus:ring-white-500 focus:border-blue-500 mt-2"
                        placeholder="e.g., Jane" />`;
                $('#memberInputs').append(inputHtml);
                memberIndex++;
            });
        });
    </script>
}